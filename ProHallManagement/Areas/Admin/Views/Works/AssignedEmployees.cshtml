@model ProHallManagement.Areas.Admin.ViewModels.AssignedEmployees

@{
    ViewBag.Title = "AssignedEmployees";
}




<h2>AssignedEmployees</h2>

@if (ViewBag.success != null)
{
    <h3 style="color: blueviolet; font-family: sans-serif">Your Data is Saved</h3>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            Name
        </th>
        <th>
            Address
        </th>
        <th>
            Phone
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Employees)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Work.Name)
            </td>

            <td>
                @Html.ActionLink("Edit", "EditAssigned", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
