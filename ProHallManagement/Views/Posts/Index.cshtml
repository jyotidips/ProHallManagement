@model  ProHallManagement.ViewModel.TotalViewModel

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_home.cshtml";
}

<h2 class="text-center">Post Repository</h2>

<section class="blog-posts-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 post-list blog-post-list" style="position:sticky">

                @if (Model.Posts == null)
                {
                    <h3> No Posts Yet</h3>
                }
                else
                {

                    @* single post *@
                    foreach (var post in Model.Posts)
                    {
                        foreach (var image in Model.PImages)
                        {
                            if (post.Id == image.PostId)
                            {


                                <div class="single-post">
                                    <img class="img-fluid" src="@image.ImageUrl" alt="">
                                    <ul class="tags">
                                        <li><a href="#">Art, </a></li>
                                        <li><a href="#">Technology, </a></li>
                                        <li><a href="#">Fashion</a></li>
                                    </ul>
                                    <a href="/Posts/SinglePost/@post.Id">
                                        <h2>
                                            @post.Title
                                        </h2>
                                    </a>
                                    <p>
                                        @post.Description
                                    </p>
                                    <div class="bottom-meta">
                                        <div class="user-details row align-items-center">
                                            <div class="comment-wrap col-lg-6">
                                                <ul>

                                                    <li>
                                                        <a href="#">
                                                            <span class="lnr lnr-heart"></span>
                                                            @post.Support
                                                            @if (post.Support == 0 || post.Support == 1)
                                                            {
                                                                <span>&nbsp;Like</span>
                                                            }
                                                            else
                                                            {
                                                                <span>&nbsp;Likes</span>
                                                            }
                                                            &nbsp;
                                                            @post.Unsupport
                                                            @if (post.Unsupport == 0 || post.Unsupport == 1)
                                                            {
                                                                <span>&nbsp;Dislike</span>
                                                            }
                                                            else
                                                            {
                                                                <span>&nbsp;Dislikes</span>
                                                            }
                                                        </a>
                                                    </li>

                                                    @{
                                                        int cnt = 1;
                                                        foreach (var cmnt in Model.UComments)
                                                        {
                                                            if (cmnt.PostId == post.Id)
                                                            {
                                                                cnt++;
                                                            }
                                                        }
                                                    }
                                                    <li><span class="lnr lnr-bubble"></span> @cnt Comments</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                    }

                }
            </div>



