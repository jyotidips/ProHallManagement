@model IEnumerable<ProHallManagement.Models.Teacher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add Teacher", "Create")
</p>
<table class="table">
    <tr>
