@model ProHallManagement.ViewModel.TotalViewModel

@using (Html.BeginForm("SubmitPost", "Posts", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Post</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
