            @Html.LabelFor(model => model.PostVM.Post.Title, htmlAttributes: new { @class = "control-label col-md-2", PlaceHolder = "Optional" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.PostVM.Post.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PostVM.Post.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PostVM.Post.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.PostVM.Post.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PostVM.Post.Description, "", new { @class = "text-danger" })
            </div>
        </div>

